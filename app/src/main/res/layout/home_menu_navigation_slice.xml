				android:layout_marginTop="@dimen/home_menu_text_top"
				android:textColor="@color/color_font_gray"
				android:textSize="@dimen/font_size_normal"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
