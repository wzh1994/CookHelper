<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dip"
	android:orientation="vertical"
    android:background="@color/bg_activity"
	>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="90dip"
		android:gravity="center_horizontal|center_vertical"
		android:background="@color/bg_activity"
		android:paddingBottom="@dimen/margin_space"
		android:paddingTop="@dimen/margin_space">
		<LinearLayout
			android:id="@+id/home_menu_categroy_layout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:clickable="true"
			android:background="@drawable/view_bg_clickable_selector"
			android:orientation="vertical"
			android:gravity="center">

			<ImageView
				android:id="@+id/home_menu_categroy_imgv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_account_box_black_18dp"/>

			<TextView
				android:id="@+id/home_menu_categroy_txtv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="炒"
				android:layout_marginTop="@dimen/home_menu_text_top"
				android:textColor="@color/color_font_gray"
				android:textSize="@dimen/font_size_normal"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/home_menu_shopcart_layout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:clickable="true"
			android:background="@drawable/view_bg_clickable_selector"
			android:orientation="vertical"
			android:gravity="center">

			<ImageView
				android:id="@+id/home_menu_shopcart_imgv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_account_box_black_18dp"/>

			<TextView
				android:id="@+id/home_menu_shopcart_txtv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="煎"
				android:layout_marginTop="@dimen/home_menu_text_top"
				android:textColor="@color/color_font_gray"
				android:textSize="@dimen/font_size_normal"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/home_menu_order_layout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:clickable="true"
			android:background="@drawable/view_bg_clickable_selector"
			android:orientation="vertical"
			android:gravity="center">

			<ImageView
				android:id="@+id/home_menu_order_imgv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
