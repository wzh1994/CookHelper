				android:layout_height="wrap_content"
				android:text="蒸"
				android:layout_marginTop="@dimen/home_menu_text_top"
				android:textColor="@color/color_font_gray"
				android:textSize="@dimen/font_size_normal"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/home_menu_coupon_layout3"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:clickable="true"
			android:background="@drawable/view_bg_clickable_selector"
			android:orientation="vertical"
			android:gravity="center">

			<ImageView
				android:id="@+id/home_menu_coupon_imgv3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_account_box_black_48dp"/>

			<TextView
				android:id="@+id/home_menu_coupon_txtv3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="2"
				android:layout_marginTop="@dimen/home_menu_text_top"
				android:textColor="@color/color_font_gray"
				android:textSize="@dimen/font_size_normal"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>